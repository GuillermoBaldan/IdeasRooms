<div class="row justify-content-center">
  {{#each Ideas}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
            <a href="/ideas/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>
            {{description}}
          </p>
          <form action="/ideas/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button
              class="btn btn-danger btn-block btn-sm"
              type="submit"
            >Delete</button>
          </form>
          <form action="/ideas/idea4room/{{_id}}" method="GET">
            <!--<input type="hidden" name="_method" value="GET" />-->
            <button
              class="btn btn-secondary btn-block btn-sm"
              type="submit"
            >Create a room</button>
          </form>
        </div>

      </div>
    </div>
  {{else}}
    <div class="col-md-3">
      <div class="card mx-auto">
        <div class="card-body">
          <h1>Hello {{user.name}}</h1>
          <p class="lead">You havenÂ´t create rooms yet.</p>
          <form
            action="/ideas/edit-idea/{{idea._id}}?_method=PUT"
            method="POST"
          >
            <input type="hidden" name="_method" value="PUT" />

            <div class="form-group">
              <button
                class="btn btn-primary btn-block"
                type="submit"
              >Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>