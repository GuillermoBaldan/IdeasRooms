<div class="row justify-content-center">
  {{#each ideas}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
          </h4>
          <p>
            {{description}}
          </p>
        </div>

      </div>
    </div>
  {{else}}
    <div class="col-md-3">
      <div class="card mx-auto">
        <div class="card-body">
          <h1>Hello {{user.name}}</h1>
          <p class="lead">There are not ideas yet.</p>
          <a href="/ideas/add" class="btn btn-success btn-block">Share One!</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>